// *****************************************************************************
// Common tags
// *****************************************************************************

*
    outline none

body, html
    font-size 14px
    
// *****************************************************************************
// Common ids
// *****************************************************************************

#view-simple
    margin 10rem auto
    max-width 600px
    width 100%

// *****************************************************************************
// Common classes
// *****************************************************************************

// text alignment
.center
    text-align center
.justify
    text-align justify
.left
    text-align left
.right
    text-align right

// floating
.float-left
    float left
.float-right
    float right

// margins
.vmargin-.5rem, .vmargin-half-rem
    height .5rem
    width 100%
.vmargin-1rem
    height 1rem
    width 100%
.vmargin-2rem
    height 2rem
    width 100%
.vmargin-3rem
    height 3rem
    width 100%
.vmargin-4rem
    height 4rem
    width 100%

// no margins
.no-margin
    margin 0
.no-hmargin, .no-horizontal-margin
    margin-left 0
    margin-right 0
.no-vmargin, .no-vertical-margin
    margin-bottom 0
    margin-top 0

// no paddings
.no-padding
    padding 0
.no-hpadding, .no-horizontal-padding
    padding-left 0
    padding-right 0
.no-vpadding, .no-vertical-padding
    padding-bottom 0
    padding-top 0

// *****************************************************************************
// Bootstrap override
// *****************************************************************************

.btn-link
    outline none !important

#sign-up-captcha-cover
    position relative
    height 12px
    bottom -13px
    left 0px
    width 275px
    background-color #f9f9f9
    border-left 1px solid #d3d3d3
