    transition all .2s ease-in

#keyvisual
    background-image url('../assets/tile-dark.gif')
    background-repeat repeat
    min-height 500px
    padding 5rem 0
    box-shadow inset  0  8px 8px -8px black, inset  0 -8px 8px -8px black

.courseOrLesson
    border 1px solid #ddd
    border-radius 6px
    width 220px
    height 300px
    text-align center
    background-color white
    cursor pointer
.courseOrLesson h4
    padding-bottom 12px
    margin-bottom 30px
    border-bottom 1px solid #ddd
.courseOrLesson img
    position relative
    top 0
    -webkit-filter drop-shadow(0px 0px 3px rgba(0,0,0,0.25))
    filter: url(#drop-shadow)
    transition all .25s
.courseOrLesson:hover img
    top 5px
    -webkit-filter drop-shadow(0px 0px 5px rgba(0,0,0,0.5))
    transition all .25s
