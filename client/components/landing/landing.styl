#header
    position relative

#sign
    position absolute
    top 1rem
    right 1rem

#logo
    padding 5rem
    
#navigation
    background-color white
    border-radius 4px
    bottom -1.8rem
    box-shadow 0px 0px 3px 0px rgba(0,0,0,0.5)
    overflow hidden
    padding 1.2rem 0
    position relative
    max-width 600px
    margin 0 auto
    text-align center
#navigation > a
    background-color white
    cursor pointer
    padding 1.4rem 2rem
    text-decoration none
    transition all .2s ease-in
